<% include partials/header %>

<link rel="stylesheet" href="/css/editProfile.css">

<div class="formdiv">
    <form method="POST" action="/user/Doctor/<%=user._id%>">
        <div class="form-group">
            <label for="name1">Name</label>
            <input type="text" class="form-control" id="name1" value="<%= user.name %>" readonly>
        </div>
        <div class="form-group">
            <label for="email1">Email</label>
            <input type="text" class="form-control" id="email1" value="<%= user.user.username %>" readonly>
        </div>
        <div class="form-group">
            <label for="contact1">Contact Number</label>
            <input type="text" class="form-control" id="contact1" value="<%= user.contact %>" readonly>
        </div>
        <div class="form-group">
            <label for="birthday">Birthday</label>
            <input type="date" class="form-control" id="birthday" name="birthday">
        </div>
        <div class="form-group">
            <label for="contact1">Gender</label>
            <select class="form-control" id="gender" name="gender">
                <option>Male</option>
                <option>Female</option>
            </select>
        </div>
        <div class="form-group">
            <label for="nic">NIC</label>
            <input type="text" class="form-control" id="nic" name="nic" placeholder="National Identity Number">
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="address" placeholder="Address">
        </div>
        <div class="form-group">
            <label for="slmareg">SLMA Registration Number</label>
            <input type="text" class="form-control" id="slmareg" name="slmareg" placeholder="SLMA Registration Number">
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <input type="text" class="form-control" id="category" name="category" placeholder="Category">
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-md btn-primary" value="Save Changes">
        </div>
    </form>
</div>

<% include partials/footer %>